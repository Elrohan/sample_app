<!DOCTYPE html>
<html>
  <head>
    <title><%= titre %></title>
    <%= csrf_meta_tag %>
    <%= stylesheet_link_tag :application %>
  </head>
  <body>
    <div class="container">
      <header>
        <% logo = image_tag("/images/logo.png", :alt => "Application Exemple", :class => "round", :style => "width: 250px;") %>
        <%= link_to logo, root_path %> 
        <nav class="round">
          <ul>
            <li><%= link_to "Accueil", root_path %></li>
            <li><%= link_to "Aide", help_path %></li>
            <li><%= link_to "Inscription", '#' %></li>
          </ul>
        </nav>
      </header>
      <section class="round">
        <%= yield %>
      </section>
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>